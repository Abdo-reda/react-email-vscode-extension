{
  "name": "react-email-renderer",
  "displayName": "React Email Renderer",
  "publisher": "AbdoReda",
  "description": "Preview your React mails instantly.",
  "version": "0.2.0",
  "icon": "assets/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Abdo-reda/react-email-vscode-extension"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "react",
    "email",
    "live",
    "renderer",
    "previewer"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "activationEvents": [
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "editor/title": [
        {
          "command": "react-email.preview",
          "when": "editorLangId == typescriptreact || editorLangId == javascriptreact",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "react-email.preview",
        "title": "Open Preview Tab",
        "icon": "$(heart)"
      },
      {
        "command": "react-email.selectRenderVersion",
        "title": "Select @react-email/render Version.",
        "icon": "$(versions)"
      }
    ],
    "configuration": {
      "title": "React Email",
      "properties": {
        "react-email.packageManager": {
          "type": "string",
          "enum": [
            "npm"
          ],
          "default": "npm",
          "markdownDescription": "Package Manager Used to install Dependencies. Currently only npm is supported. Later, support for yarn, pnpm, bun will be added. [Reference](https://react.email/docs/getting-started/manual-setup#2-install-dependencies)"
        },
        "react-email.reactEmailVersion": {
          "type": "string",
          "pattern": "(^latest$)|^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
          "patternErrorMessage": "The value must match the SemVer pattern 'x.x.x' or the Value 'latest'.",
          "default": "latest",
          "markdownDescription": "The version of react-email used. [Reference](https://www.npmjs.com/package/react-email?activeTab=versions)"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "mkdir -p build && vsce package --out build/",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  }
}
